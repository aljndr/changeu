%h1.well.well-small #{@user.nombre} #{@user.apellido} 
%br
%fieldset
	%legend
		%h2 
			Intercambios 
			.pull-right= icon_link_to "Crear Intercambio", new_user_exchange_path(@user),"retweet"
	- unless @user.admon_exchanges? or @user.active_exchanges?
		%p Por el momento no cuentas con intercambios
	- else
		%table
			= render partial: 'exchange', collection: @user.exchanges

%br
%fieldset
	%legend
		%h2
			Lista de Regalos 
			.pull-right= icon_link_to "Agregar deseo",new_user_wish_path(@user),"gift"

	- if @user.wishes.empty?
		%p Tu lista de regalos est√° vacia 
	- else
		%table
			= render partial: 'wish', collection: @user.wishes
%br
%fieldset
	%legend
		%h2 Invitaciones
	- unless @user.pendient_exchanges?
		%p Por el momento no cuentas con invitaciones
	- else
		= render partial:'invitacion',collection:@user.invitaciones



