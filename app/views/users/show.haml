%h1.well.well-small #{@user.nombre} #{@user.apellido} 
%h2 
	Intercambios 
	%ul{class:"nav nav-pills"}
		%li.active=link_to "Crear Intercambio", new_user_exchange_path(@user)
- if @user.exchanges.empty?
	%p Por el momento no cuentas con intercambios
- else
	%ul
		%il
			%table
				= render partial: 'exchange', collection: @user.exchanges
%h2
	Lista de Regalos 
	%ul{class:"nav nav-pills"}
		%li.active=link_to "Agregar Deseo", new_user_wish_path(@user)
- if @user.wishes.empty?
	%p Tu lista de regalos est√° vacia 
- else
	%ul
		%il
			%table
				= render partial: 'wish', collection: @user.wishes
